.light-theme {

    --bg: var(--black);
    --fontColor: var(--green);
    --btnBg: var(--black);
    --btnFontColor: var(--white);
    background-color: white;
    
    
    }
    
.dark-theme {
    --bg: var(--black);
    --fontColor: var(--green);
    --btnBg: var(--white);
    --btnFontColor: var(--black);
    background-color: black;
}
.btn {
    position: absolute;
    top: 60px;
    left: 550px;
    height: 50px;
    width: 50px;
    border-radius: 50px;
    border: none;
    color: var(--btnFontColor);
    background-color: var(--btnBg);
}
.btn:focus {
    outline-style: none;
}